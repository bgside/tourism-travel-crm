# ===============================================
# Tourism & Travel CRM - Environment Configuration
# ===============================================
# Copy this file to .env and configure your settings
# Optimized for XAMPP development environment
# ===============================================

# ===============================================
# Application Settings
# ===============================================
APP_NAME="Tourism & Travel CRM"
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key_generate
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost/tourism-crm

# Default Language & Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ===============================================
# Database Configuration (XAMPP MySQL)
# ===============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tourism_crm
DB_USERNAME=root
DB_PASSWORD=

# Database Options (for multilingual support)
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# ===============================================
# Cache & Session Configuration
# ===============================================
# For development, use file-based cache and sessions
# For production, consider Redis or Memcached
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=7200
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration (sync for development)
QUEUE_CONNECTION=sync

# ===============================================
# Redis Configuration (Optional - for performance)
# ===============================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# Redis Database Numbers
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2
REDIS_QUEUE_DB=3

# ===============================================
# Email Configuration
# ===============================================
# Tourism CRM Email Settings
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tourism-crm.com
MAIL_FROM_NAME="${APP_NAME}"

# Email Template Settings
MAIL_BOOKING_CONFIRMATION=true
MAIL_PAYMENT_REMINDER=true
MAIL_TRAVEL_REMINDER=true

# ===============================================
# File Storage Configuration
# ===============================================
# File System
FILESYSTEM_DISK=local

# Upload Limits (in MB)
MAX_UPLOAD_SIZE=50
MAX_IMAGE_SIZE=10
MAX_DOCUMENT_SIZE=25

# File Storage Paths
TRAVEL_DOCUMENTS_PATH=travel_documents
CUSTOMER_PHOTOS_PATH=customer_photos
PACKAGE_IMAGES_PATH=package_images
REPORTS_PATH=reports

# ===============================================
# Payment Gateway Configuration
# ===============================================
# Enable/Disable Payment Gateways
PAYMENTS_ENABLED=true

# Stripe Configuration
STRIPE_ENABLED=false
STRIPE_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
PAYPAL_ENABLED=false
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Default Payment Settings
DEFAULT_CURRENCY=USD
ACCEPTED_CURRENCIES=USD,EUR,AED,EGP,SAR,JOD
PAYMENT_METHODS=cash,card,bank_transfer,online

# ===============================================
# Booking & Travel Configuration
# ===============================================
# Booking Settings
BOOKING_PREFIX=TRV
BOOKING_REFERENCE_LENGTH=8
BOOKING_CONFIRMATION_AUTO=true
BOOKING_MODIFICATION_DEADLINE=72

# Pricing & Discounts
EARLY_BIRD_DISCOUNT=10
GROUP_DISCOUNT_MIN=5
CHILD_DISCOUNT_PERCENTAGE=25
SENIOR_DISCOUNT_PERCENTAGE=15

# Cancellation Policy
CANCELLATION_FEE_PERCENTAGE=10
REFUND_PROCESSING_DAYS=7
FREE_CANCELLATION_HOURS=24

# ===============================================
# Tourism Business Configuration
# ===============================================
# Company Information
COMPANY_NAME="Your Travel Company"
COMPANY_EMAIL=info@your-travel-company.com
COMPANY_PHONE="+1-234-567-8900"
COMPANY_ADDRESS="123 Travel Street, Tourism City"
COMPANY_LICENSE="TRV-LICENSE-123456"

# Business Hours
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_TIMEZONE=UTC
BUSINESS_DAYS="Monday,Tuesday,Wednesday,Thursday,Friday"

# Languages & Localization
SUPPORTED_LANGUAGES=en,ar
DEFAULT_LANGUAGE=en
RTL_LANGUAGES=ar

# ===============================================
# Travel Package Configuration
# ===============================================
# Package Settings
PACKAGES_PER_PAGE=12
FEATURED_PACKAGES_LIMIT=8
POPULAR_PACKAGES_LIMIT=6

# Package Pricing
MARKUP_PERCENTAGE=20
SEASONAL_PRICE_ADJUSTMENT=true
DYNAMIC_PRICING=false

# Package Categories
PACKAGE_CATEGORIES=cultural,adventure,beach,city,family,luxury

# ===============================================
# Customer & CRM Configuration
# ===============================================
# Customer Management
CUSTOMER_CODE_PREFIX=CUST
LOYALTY_POINTS_ENABLED=true
LOYALTY_POINTS_RATE=100
CUSTOMER_TIER_SYSTEM=true

# Customer Journey Stages
JOURNEY_STAGES=inquiry,quote,booking,payment,travel,followup

# Communication Settings
AUTO_FOLLOWUP_DAYS=7
BIRTHDAY_GREETINGS=true
ANNIVERSARY_REMINDERS=true

# ===============================================
# Security & Authentication
# ===============================================
# Authentication
AUTH_GUARD=web
AUTH_PASSWORD_TIMEOUT=10800

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# Session Security
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# API Security
API_RATE_LIMIT=60
API_RATE_LIMIT_PERIOD=1

# ===============================================
# Third-Party Services
# ===============================================
# Google Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Social Media
FACEBOOK_PAGE_URL=https://facebook.com/yourcompany
INSTAGRAM_HANDLE=@yourcompany
TWITTER_HANDLE=@yourcompany

# Weather API (for destination information)
WEATHER_API_KEY=your_weather_api_key

# Currency Exchange API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# ===============================================
# Analytics & Monitoring
# ===============================================
# Application Monitoring
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# Error Tracking (Sentry - Optional)
SENTRY_LARAVEL_DSN=your_sentry_dsn
SENTRY_TRACES_SAMPLE_RATE=1.0

# Performance Monitoring
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# ===============================================
# Development & Testing
# ===============================================
# Development Tools
CLOCKWORK_ENABLE=true
QUERY_DETECTOR_ENABLED=true

# Testing Database
DB_TEST_DATABASE=tourism_crm_test

# Demo Data
DEMO_MODE=false
GENERATE_DEMO_DATA=true
DEMO_PACKAGES_COUNT=20
DEMO_CUSTOMERS_COUNT=100
DEMO_BOOKINGS_COUNT=50

# ===============================================
# Backup & Maintenance
# ===============================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_DISK=local
BACKUP_MYSQL_DUMP_PATH=/usr/bin/mysqldump
BACKUP_SCHEDULE=daily

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=your_maintenance_secret

# ===============================================
# Broadcasting & Real-time Features
# ===============================================
# Broadcasting (for real-time notifications)
BROADCAST_DRIVER=log
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_APP_CLUSTER=mt1

# WebSocket Configuration
PUSHER_SCHEME=http
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001

# ===============================================
# Image & Media Processing
# ===============================================
# Image Processing
IMAGE_DRIVER=gd
IMAGE_QUALITY=85
IMAGE_OPTIMIZE=true

# Thumbnail Sizes
THUMBNAIL_SMALL=150x150
THUMBNAIL_MEDIUM=300x300
THUMBNAIL_LARGE=600x600

# ===============================================
# SEO & Marketing
# ===============================================
# SEO Settings
SEO_TITLE_SUFFIX=" - ${APP_NAME}"
SEO_DESCRIPTION="Professional tourism and travel CRM system for managing bookings, customers, and travel packages"
SEO_KEYWORDS="travel,tourism,crm,booking,vacation,holidays"

# Marketing
NEWSLETTER_ENABLED=true
PROMOTIONAL_EMAILS=true
DISCOUNT_CODES_ENABLED=true

# ===============================================
# API & Integrations
# ===============================================
# API Configuration
API_VERSION=v1
API_PREFIX=api
API_MIDDLEWARE=throttle:api

# External API Keys
AMADEUS_API_KEY=your_amadeus_api_key
BOOKING_COM_API_KEY=your_booking_com_api_key
VIATOR_API_KEY=your_viator_api_key

# ===============================================
# Mobile App (Future)
# ===============================================
# Mobile API
MOBILE_API_ENABLED=false
MOBILE_APP_VERSION=1.0.0
MOBILE_FORCE_UPDATE=false

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APN_CERTIFICATE_PATH=path_to_apn_certificate

# ===============================================
# Custom Tourism Features
# ===============================================
# Multi-currency Support
MULTI_CURRENCY_ENABLED=true
AUTO_CURRENCY_CONVERSION=false
CURRENCY_UPDATE_FREQUENCY=daily

# Seasonal Pricing
SEASONAL_PRICING_ENABLED=true
PEAK_SEASON_MULTIPLIER=1.5
OFF_SEASON_MULTIPLIER=0.8

# Group Booking Features
GROUP_BOOKING_ENABLED=true
GROUP_BOOKING_MIN_SIZE=5
GROUP_BOOKING_DISCOUNT=15

# Travel Insurance
TRAVEL_INSURANCE_ENABLED=true
INSURANCE_PROVIDER=default
INSURANCE_RATE_PERCENTAGE=5

# ===============================================
# Reporting & Analytics
# ===============================================
# Report Generation
REPORTS_ENABLED=true
REPORTS_CACHE_TTL=3600
REPORTS_EXPORT_FORMATS=pdf,excel,csv

# Analytics
ANALYTICS_ENABLED=true
CUSTOMER_ANALYTICS=true
REVENUE_ANALYTICS=true
PACKAGE_PERFORMANCE=true

# ===============================================
# End of Configuration
# ===============================================

# Note: After copying this file to .env:
# 1. Generate APP_KEY with: php artisan key:generate
# 2. Configure your database settings
# 3. Set up email configuration for notifications
# 4. Configure payment gateways if needed
# 5. Add your Google Maps API key for location features